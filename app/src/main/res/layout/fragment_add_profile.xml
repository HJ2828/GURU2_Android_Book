<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProfileFragment">

    <LinearLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:gravity="center">
            <Button
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:background="@drawable/add_changeprofile_btnback"
                android:layout_marginRight="49dp"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/addprofile_title"/>
            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_marginLeft="49dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="96dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/add_changeprofile_name" />

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="320dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/add_changeprofile_edittext"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="96dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/add_changeprofile_age" />

                    <EditText
                        android:id="@+id/edtAge"
                        android:layout_width="320dp"
                        android:layout_height="41dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/add_changeprofile_edittext"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linearImage"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="114dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/add_changeprofile_image" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/mypage_circle" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOkay"
                android:layout_width="91dp"
                android:layout_height="50dp"
                android:background="@drawable/addprofile_btnadd"
                android:text="."
                android:textColor="#00FFFFFF" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>