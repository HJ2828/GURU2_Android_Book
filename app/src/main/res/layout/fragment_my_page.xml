<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyPageFragment">

    <LinearLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/mypage_title" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="97dp"
            android:layout_height="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/mypage_profiletext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LinearProfile00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile00"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_overlay="false"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/profile_outline"
                    android:src="@drawable/mypage_circle"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/textvView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="(메인)"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/nameText00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="이름아아아아"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearProfile01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:visibility="gone">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile01"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_overlay="false"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/profile_outline"
                    android:src="@drawable/mypage_circle"/>
                <TextView
                    android:id="@+id/nameText01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="이름아아아아"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearProfile02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:visibility="gone">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile02"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_overlay="false"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/profile_outline"
                    android:src="@drawable/mypage_circle"/>
                <TextView
                    android:id="@+id/nameText02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text= "이름아아아아"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearProfile03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:visibility="gone">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile03"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_overlay="false"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/profile_outline"
                    android:src="@drawable/mypage_circle"/>
                <TextView
                    android:id="@+id/nameText03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="이름아아아아"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mypage_btnadd"
                android:text="."
                android:textColor="#00FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="318dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mypage_btnlogout"
                android:text="."
                android:textColor="#00804B4B"
                android:layout_marginBottom="45dp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>