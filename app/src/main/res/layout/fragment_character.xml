                            android:id="@+id/imageCha08"
                            android:src="@drawable/character_rabbit_shadow" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp">
                        <ImageView
                            android:id="@+id/imageCheck12"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/character_check"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageCha12"
                            android:src="@drawable/character_polarbear_shadow" />
                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_weight="1"
